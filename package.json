{
  "name": "script-writer",
  "version": "1.0.0",
  "description": "A simple script writing application for video and movie scripts",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "server": "node server.js",
    "dev": "node server.js",
    "build": "echo 'No build step needed for web deployment'",
    "build:electron": "electron-builder --mac",
    "dist": "electron-builder --mac --publish=never"
  },
  "keywords": [
    "script",
    "writer",
    "screenplay"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "google-auth-library": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.scriptwriter.app",
    "productName": "Script Writer",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json"
    ]
  }
}

